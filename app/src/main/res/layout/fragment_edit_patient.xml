<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPatientFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#b9b2ff"
            android:orientation="vertical">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:background="@drawable/imageview_border"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/img_pProfile"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f1efff"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/edit_fname"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <View
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#F0F0F0"/>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/edit_lname"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <View
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#F0F0F0"/>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f1efff"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/edit_email"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <View
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#F0F0F0"/>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mobile no."
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/edit_mobile"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <View
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#F0F0F0"/>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f1efff"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="D.O.B"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/edit_dob"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <View
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#F0F0F0"/>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Marital Status"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/edit_marital"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <View
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#F0F0F0"/>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f1efff"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Sex"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/edit_sex"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <View
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#F0F0F0"/>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Blood Group"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/edit_bg"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <View
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#F0F0F0"/>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f1efff"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Patient Weight"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/edit_weight"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <View
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#F0F0F0"/>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Pateint Height"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/edit_height"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <View
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#F0F0F0"/>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f1efff"
            android:layout_gravity="center"

            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/edit_address"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"

            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Patient History"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/edit_phistory"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:backgroundTint="@color/frontcolor2"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif-light"
            android:padding="10dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/btn_savechanges"/>

    </LinearLayout>



</ScrollView>