<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/front_layout"
    android:orientation="vertical">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/dots"
        android:layout_marginTop="10dp"
        android:id="@+id/img_menu"
        android:layout_marginBottom="5dp"
        android:layout_gravity="right"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Trade Name :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            />
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/iconunpressed"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/txt_tradename"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Generic Name :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            />
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/iconunpressed"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/txt_genericname"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Note :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            />
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/iconunpressed"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/txt_note"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/iconunpressed"/>



</LinearLayout>