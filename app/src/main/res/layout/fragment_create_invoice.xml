<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateInvoiceFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f1efff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:drawableEnd="@drawable/ic_baseline_right_arrow"
        android:textColor="@color/frontcolor2"/>
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/front_layout"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:text="Create Invoice"
            android:textColor="@color/iconunpressed"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"/>
        <View
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:background="#f1efff"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            />

        <AutoCompleteTextView
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edit_patient"
            android:padding="10dp"
            android:id="@+id/auto_patientname"
            android:hint="Search By Name"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="5dp"

            android:layout_marginLeft="15dp"
            />
        <Spinner
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/spinner_front"
            android:id="@+id/spinner_Doctorname"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Mode :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="15dp"
            />
        <Spinner
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/spinner_front"
            android:id="@+id/spinner_paymentmode"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Status :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"

            android:layout_marginLeft="15dp"
            />
        <Spinner
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/spinner_front"
            android:id="@+id/spinner_paymentstatus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"

            android:layout_marginLeft="15dp"
            />

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_patient"
            android:fontFamily="sans-serif-light"
            android:hint="Select Date."
            android:padding="10dp"
            android:textColor="@color/iconunpressed"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Mode :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />
        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"

            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/paisa2"/>

            <EditText
                android:id="@+id/edit_doctorfees"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/edit_patient"
                android:fontFamily="sans-serif-light"
                android:hint="Doctor Fee."
                android:padding="10dp"
                android:textColor="@color/iconunpressed"
                android:textSize="14sp" />



        </LinearLayout>

        <Button
            android:id="@+id/btn_createInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:padding="7dp"
            android:background="@drawable/btn_save"
            android:fontFamily="sans-serif-light"
            android:text="Create invoice"
            android:textColor="@color/white"
            android:textSize="14sp" />




    </LinearLayout>
    </LinearLayout>

</ScrollView>